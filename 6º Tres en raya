  //}
  
if (jugada%2 == 0){
  	parX[jugada] =posX;
  	println("x: " + parX[jugada]);
    parY[jugada] =posY;
  	println("Y: " + parY[jugada]);
   	println("jugada PAR");
 }
  
 if (jugada%2 != 0){
    imparX[jugada] =posX;
  	println("X: " + imparX[jugada]);
    imparY[jugada] =posY;
  	println("Y: " + imparY[jugada]);
